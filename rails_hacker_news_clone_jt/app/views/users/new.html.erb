<h2>Create an Account</h2>

<%= form_for @user, url: users_path do |f| %>
  <%= render 'user_errors' %>
  
  <%= f.label :username %>:<br>
  <%= f.text_field :username %><br><br>

  <%= f.label :email %>:<br>
  <%= f.email_field :email %><br><br>

  <%= f.label :password %>:<br>
  <%= f.password_field :password %><br><br>

  <%= f.submit %>

<% end %>
