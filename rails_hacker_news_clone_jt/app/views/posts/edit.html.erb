<h2>Edit Post</h2>

<%= form_for @post, url: post_path(@post), method: 'patch' do |f| %>
  <%= render 'post_errors' %>

  <%= f.label :title %>:<br>
  <%= f.text_field :title %><br><br>

  <%= f.label :description %>:<br>
  <%= f.text_area :description %><br><br>

  <%= f.submit "Edit" %>

<% end %>

<br><%= link_to 'Back', root_path %>
